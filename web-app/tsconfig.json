{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"src/*": ["src/*"],
			"generated/*": ["generated/*"]
		},
		"lib": ["dom", "es2020"],
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"types": ["jest"],
		"typeRoots": ["./types", "./node_modules/@types", "./src/types"]
	},
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
	"include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
