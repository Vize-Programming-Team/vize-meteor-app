{
  "private": true,
  "scripts": {
    "lint": "eslint -c .eslintrc.json ./{client,server,imports}/**/*.{js,jsx}",
    "lint-nice-out": "eslint -c .eslintrc.json ./{client,server,imports}/**/*.{js,jsx} -f html -o ./eslint-out.html",
    "lint-formatting": "prettier --list-different ./**/*.{js,jsx,css,scss}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx,json,yaml,yml,css,scss,md}": [
        "prettier --write",
        "git add"
      ],
      "!*.sh": [
        "chmod 644",
        "git add"
      ],
      "*.sh": [
        "chmod 755",
        "git add"
      ]
    },
    "concurrent": false
  },
  "devDependencies": {
    "@meteorjs/eslint-config-meteor": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-meteor": "^5.1.0",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "typescript": "^3.5.2"
  }
}
