{
  "private": true,
  "scripts": {
    "lint": "eslint -c .eslintrc.json ./{client,server,imports}/**/*.{js,jsx}",
    "lint-nice-out": "eslint -c .eslintrc.json ./{client,server,imports}/**/*.{js,jsx} -f html -o ./eslint-out.html",
    "lint-formatting": "prettier --list-different ./**/*.{js,jsx,css,scss}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx,json,yaml,yml,css,scss,md}": [
        "prettier --write",
        "git add"
      ],
      "!*.sh": [
        "chmod 644",
        "git add"
      ],
      "*.sh": [
        "chmod 755",
        "git add"
      ]
    },
    "concurrent": false
  },
  "devDependencies": {
    "@meteorjs/eslint-config-meteor": "^1.0.5",
    "babel-eslint": "^8.2.3",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-meteor": "^5.0.0",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-paginate": "^6.3.0",
    "reactstrap": "^7.1.0"
  }
}
